extends layout

block layout-content
    -if(args.cancel != undefined)
        form#script-target(target='/', method='DELETE')
            input(type='hidden', name='del', value=args.delete)
        div.text-center
            a.btn.ct-color.ms-2.me-2(href=`${baseURL}${args.cancel}`) Cancel
            button.btn.er-color.ms-2.me-2(onclick=`getDeleteFromAPI('${baseURL}', '${args.target}', 'DELETE')`) Delete
                