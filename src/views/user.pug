extends layout

block layout-content
    div.container-fluid
        div.row
            div.col-sm-3
            div.col-sm-6.row.align-items-center
                div.col-sm-3.text-end
                    span.bg-item Search Users
                div.col-sm-6
                    input#small-search.form-control.field(type='text' name="tagSearch", value=args.tagSearch)
                div.col-sm-3
                    button.btn.ct-color(onclick=`window.location.href='${baseURL}/userCenter?username='+document.getElementById('small-search').value;`) Go
            div.col-sm-3
        div.row.mt-3
            div.col-sm-1
            div.col-sm-10
                div.row.mb-1.text-center
                    div.col-sm-2
                    div.col-sm-2
                        b Username
                    div.col-sm-2
                        b Role
                    div.col-sm-2
                        b State
                    div.col-sm-2
                        b Options
                    div.col-sm-2
                each user in args.results
                    div.row.mb-1.text-center.align-items-center
                        div.col-sm-2
                        div.col-sm-2= user.username
                        div.col-sm-2= user.roleToString()
                        div.col-sm-2= user.stateToString()
                        div.col-sm-2
                            a.btn.ms-2.me-2.gd-color(title='Edit' href=`${baseURL}/post/user?edit=${user.username}`) E
                            a.btn.ms-2.me-2.er-color(title='Delete' href=`${baseURL}/delete/user?username=${user.username}`) X
                        div.col-sm-2
            div.col-sm-1